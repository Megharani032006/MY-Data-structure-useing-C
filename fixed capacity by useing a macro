//fixed capacity by useing a macro function called cap
#include<stdio.h> 
#define CAP 40
void printarray(int a[] ,int n);
void printarray(int a[CAP],int n){
    for(int i=0 ; i<n&&i<CAP ;i++){
    a[i]=i;
    printf("%d", a[i]);
}
    
}
int main(){
    int a[CAP];
    int n=5;
    printarray(a,n);

}
output
01234
