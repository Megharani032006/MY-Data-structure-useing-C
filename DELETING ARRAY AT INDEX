//DELETEING AT INDEX
    #include<stdio.h>
    int main()
    {
        printf("MEGHARANI M\n");
        printf("USN=1SV24CS076\n");
        int arr[6]={20,30,40,50,60,70};
        int n,i;
        n=5;
        int pos=3;
        for(i=pos;i<n-1;i++){
            arr[i]=arr[i+1];
        }
        n--;
        for(i=0;i<n;i++)
        printf("arr[%d]=%d\n",i,arr[i]);
        return 0;
    }
Output
MEGHARANI M
USN=1SV24CS076
arr[0]=20
arr[1]=30
arr[2]=40
